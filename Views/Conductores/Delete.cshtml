@model ConcesionarioWeb.Models.Conductor
@{
    ViewData["Title"] = "Eliminar";
}
<h1>Eliminar</h1>
<hr />
<h3>¿Seguro que deseas eliminar este registro?</h3>
<dl>
    <dt>Id</dt><dd>@Model.Id</dd>
    <dt>Nombre</dt><dd>@Model.Nombre</dd>
    <dt>Tipo de Licencia</dt><dd>@Model.TipoLicencia</dd>
    <dt>Tipo de Conductor</dt><dd>@Model.TipoConductor.Nombre</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a asp-action="Index">Cancelar</a>
</form>